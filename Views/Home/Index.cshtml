                                <p class="text-muted mb-0">@Localizer["PutAnythingOnScreen"]</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-5 mb-md-0">
                            <!-- Feature item-->
                            <div class="text-center">
                              
                                <h3 class="font-alt">@Localizer["FreeToUse"]</h3>
                                <p class="text-muted mb-0">@Localizer["ThemeFreeDownload"]</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Feature item-->
